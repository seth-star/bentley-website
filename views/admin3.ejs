

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - Order List</title>
  <link rel="stylesheet" href="/styles/admin1.css">
</head>
<body>
  <div class="container">
    <h1>Order List-Accommodation</h1>
    <div class="search-container">
      <input type="text" id="searchInput" placeholder="Search for orders...">
      <button onclick="searchTable()">Search</button>
    </div>
    <table id="orderTable">
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Order Date</th>
          <th>Total Amount</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% orders1.forEach(order2 => { %>
          <tr>
            <td><%= order2._id %></td>
            <td><%= order2.updatedAt.toDateString() %></td>
            <td>R<%= order2.total %></td>
            <td>
              <button class="btn" onclick="window.location.href='/reservation/<%= order2._id %>'">View Order</button>

              <button class="btn" >Delete Order</button>

              <button  class="btn js-btn" data-availId="<%= order2._id %>"
              >Available</button>
              
              <button class="btn" onclick="sendUrlToFrontend2('<%= order2._id %>')">Not Available</button>
              <div id="link-container-<%= order2._id %>" class="link-container"></div>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <script>
    document.querySelectorAll('.js-btn').forEach((button)=>{
     button.addEventListener('click',async()=>{
      const availid = button.dataset.availid;
      try {
          const url = `/processing/accom/avail/${availid}`;
          const response = await fetch(url, {
            method: 'GET',
            headers: {
              'Content-Type': 'text/html'
            }
          });
          if (!response.ok) {
            throw new Error('Network response was not ok');
          }
          const data = await response;
          console.log(data);
          // Handle the response data as needed
          
          const linkContainer = document.getElementById(`link-container-${availid}`);
          linkContainer.innerHTML = `<a href="/processing/${availid}" target="_blank">Check Availability</a>`;

          alert(`Availability status: ${data.status}`);
        } catch (error) {
          console.error('Error:', error);
          alert('Error fetching availability status');
        }
      });
    });
     
    function sendUrlToFrontend(orderId) {
      const url = `/processing/accom/avail/${orderId}`;
      alert(`URL sent to frontend: ${url}`);
      
      window.location.href = url;
    }
     
    function sendUrlToFrontend2(orderId) {
      const url = `/processing/accom/notavail/${orderId}`;
      alert(`URL sent to frontend: ${url}`);
    
      window.location.href = url;
    }


    
    function searchTable() {
      const input = document.getElementById('searchInput');
      const filter = input.value.toLowerCase();
      const table = document.getElementById('orderTable');
      const tr = table.getElementsByTagName('tr');

      for (let i = 1; i < tr.length; i++) {
        const td = tr[i].getElementsByTagName('td');
        let match = false;
        for (let j = 0; j < td.length; j++) {
          if (td[j]) {
            if (td[j].innerHTML.toLowerCase().indexOf(filter) > -1) {
              match = true;
              break;
            }
          }
        }
        if (match) {
          tr[i].style.display = '';
        } else {
          tr[i].style.display = 'none';
        }
      }
    }
  </script>
</body>
</html>